extends:
  - eslint-config-airbnb
  - prettier
  - prettier/react

plugins:
    - prettier

parser:
  babel-eslint

settings:
  ecmascript: 6

parserOptions:
  sourceType: "module"
  ecmaVersion: 6
  ecmaFeatures:
    jsx: true

env:
  browser: true
  node: true

rules:
  indent: 2
  func-style: 0
  func-names: 0
  comma-dangle: 0
  semi: 0
  no-console: 0
  no-param-reassign: 0
  linebreak-style: 0
  object-shorthand: 0
  no-underscore-dangle: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0
  import/extensions: 0
  react/jsx-filename-extension: 0
  react/prefer-stateless-function: 0
  react/jsx-indent: 1
  react/jsx-indent-props: 1
  react/no-children-prop: 0
  react/forbid-prop-types: 0
  jsx-a11y/href-no-hash: 0
  prettier/prettier: ["error", {"trailingComma": false, "semi": false, "singleQuote": true, "printWidth": 120, "commaDangle": false, "react/jsx-indent": true, "react/jsx-indent-props": true, semicolons: false }]
